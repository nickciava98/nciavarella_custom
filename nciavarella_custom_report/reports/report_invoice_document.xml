<odoo>
    <template id="account_invoice_document_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//div[hasclass('page')]" position="before">
            <t t-set="div_header"> </t>

            <div class="header first-page" style="font-family: 'Courier Prime', serif;">
                <table class="table table-bordered">
                    <tr>
                        <td style="width: 50%;">
                            <p>
                                <t t-if="o.company_id.partner_id.name">
                                    <strong>CEDENTE/PRESTATORE:</strong>
                                    <br/><span t-field="o.company_id.partner_id.name"/>
                                </t>

                                <t t-if="o.company_id.partner_id.street">
                                    <br/><span t-field="o.company_id.partner_id.street"/>
                                </t>

                                <t t-if="o.company_id.partner_id.street2">
                                    <br/><span t-field="o.company_id.partner_id.street2"/>
                                </t>

                                <t t-if="o.company_id.partner_id.zip">
                                    <br/><span t-field="o.company_id.partner_id.zip"/> -
                                </t>

                                <t t-if="o.company_id.partner_id.city">
                                    <span t-field="o.company_id.partner_id.city"/>
                                </t>

                                <t t-if="o.company_id.partner_id.state_id">
                                    (<span t-field="o.company_id.partner_id.state_id.code"/>)
                                </t>

                                <t t-if="o.company_id.partner_id.country_id">
                                    - <span t-field="o.company_id.partner_id.country_id"/>
                                </t>

                                <t t-if="o.company_id.partner_id.vat">
                                    <br/><strong>P. IVA:</strong>
                                    <span t-field="o.company_id.partner_id.vat"/>
                                </t>

                                <t t-if="o.company_id.partner_id.fiscalcode">
                                    <br/><strong>C. F.:</strong>
                                    <span t-field="o.company_id.partner_id.fiscalcode"/>
                                </t>

                                <t t-if="o.company_id.partner_id.pec_mail">
                                    <br/><strong>PEC:</strong>
                                    <span t-field="o.company_id.partner_id.pec_mail"/>
                                </t>

                                <t t-if="o.company_id.partner_id.email">
                                    <br/><strong>Email:</strong>
                                    <span t-field="o.company_id.partner_id.email"/>
                                </t>

                                <t t-if="o.company_id.partner_id.phone">
                                    <br/><strong>Tel.:</strong>
                                    <span t-field="o.company_id.partner_id.phone"/>
                                </t>

                                <t t-if="o.company_id.partner_id.mobile">
                                    <br/><strong>Cell.:</strong>
                                    <span t-field="o.company_id.partner_id.mobile"/>
                                </t>

                                <t t-if="o.company_id.partner_id.website">
                                    <br/><strong>Web:</strong>
                                    <span t-field="o.company_id.partner_id.website"/>
                                </t>
                            </p>
                        </td>
                        <td style="width: 50%;">
                            <p>
                                <t t-if="o.partner_id.name">
                                    <strong>CESSIONARIO/COMMITTENTE:</strong>
                                    <br/><span t-field="o.partner_id.name"/>
                                </t>

                                <t t-if="o.partner_id.street">
                                    <br/><span t-field="o.partner_id.street"/>
                                </t>

                                <t t-if="o.partner_id.street2">
                                    <br/><span t-field="o.partner_id.street2"/>
                                </t>

                                <t t-if="o.partner_id.zip">
                                    <br/><span t-field="o.partner_id.zip"/> -
                                </t>

                                <t t-if="o.partner_id.city">
                                    <span t-field="o.partner_id.city"/>
                                </t>

                                <t t-if="o.partner_id.state_id">
                                    (<span t-field="o.partner_id.state_id.code"/>)
                                </t>

                                <t t-if="o.partner_id.country_id">
                                    - <span t-field="o.partner_id.country_id"/>
                                </t>

                                <t t-if="o.partner_id.vat">
                                    <br/><strong>P. IVA:</strong>
                                    <span t-field="o.partner_id.vat"/>
                                </t>

                                <t t-if="o.partner_id.fiscalcode">
                                    <br/><strong>C. F.:</strong>
                                    <span t-field="o.partner_id.fiscalcode"/>
                                </t>

                                <t t-if="o.partner_id.pec_mail">
                                    <br/><strong>PEC:</strong>
                                    <span t-field="o.partner_id.pec_mail"/>
                                </t>

                                <t t-if="o.partner_id.email">
                                    <br/><strong>Email:</strong>
                                    <span t-field="o.partner_id.email"/>
                                </t>

                                <t t-if="o.partner_id.phone">
                                    <br/><strong>Tel.:</strong>
                                    <span t-field="o.partner_id.phone"/>
                                </t>

                                <t t-if="o.partner_id.mobile">
                                    <br/><strong>Cell.:</strong>
                                    <span t-field="o.partner_id.mobile"/>
                                </t>

                                <t t-if="o.partner_id.website">
                                    <br/><strong>Web:</strong>
                                    <span t-field="o.partner_id.website"/>
                                </t>
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <strong t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                FATTURA N.
                            </strong>

                            <strong t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                                FATTURA PRO-FORMA
                            </strong>

                            <strong t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                FATTURA CANCELLATA N.
                            </strong>

                            <strong t-if="o.move_type == 'out_refund'">
                                NOTA DI CREDITO N.
                            </strong>

                            <span t-if="o.name != '/'" t-field="o.name"/>
                            DEL <span t-field="o.invoice_date"/>

                            <br/>

                            <i style="font-size: 10.5pt;">
                                <t t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                                    Documento privo di valenza fiscale ai sensi dell’art. 21 Dpr 633/72.
                                </t>

                                <t else="">
                                    Documento privo di valenza fiscale ai sensi dell’art. 21 Dpr 633/72.
                                    L’originale è disponibile all’indirizzo telematico da
                                    Lei fornito oppure nella Sua area riservata dell’Agenzia delle Entrate.
                                </t>
                            </i>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <strong>CAUSALE:</strong>
                            <br/><span t-field="o.narration"/>
                        </td>
                    </tr>
