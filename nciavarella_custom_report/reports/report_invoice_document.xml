<odoo>
    <template id="account_invoice_document_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//div[hasclass('page')]" position="before">
            <t t-set="div_header"> </t>

            <div class="header first-page" style="font-family: 'Courier Prime', serif;">
                <table class="table table-bordered">
                    <tr>
                        <td style="width: 50%;">
                            <p>
                                <t t-if="o.company_id.partner_id.name">
                                    <strong>CEDENTE/PRESTATORE:</strong>
                                    <br/><span t-field="o.company_id.partner_id.name"/>
                                </t>

                                <t t-if="o.company_id.partner_id.street">
                                    <br/><span t-field="o.company_id.partner_id.street"/>
                                </t>

                                <t t-if="o.company_id.partner_id.street2">
                                    <br/><span t-field="o.company_id.partner_id.street2"/>
                                </t>

                                <t t-if="o.company_id.partner_id.zip">
                                    <br/><span t-field="o.company_id.partner_id.zip"/> -
                                </t>

                                <t t-if="o.company_id.partner_id.city">
                                    <span t-field="o.company_id.partner_id.city"/>
                                </t>

                                <t t-if="o.company_id.partner_id.state_id">
                                    (<span t-field="o.company_id.partner_id.state_id.code"/>)
                                </t>

                                <t t-if="o.company_id.partner_id.country_id">
                                    - <span t-field="o.company_id.partner_id.country_id"/>
                                </t>

                                <t t-if="o.company_id.partner_id.vat">
                                    <br/><strong>P. IVA:</strong>
                                    <span t-field="o.company_id.partner_id.vat"/>
                                </t>

                                <t t-if="o.company_id.partner_id.fiscalcode">
                                    <br/><strong>C. F.:</strong>
                                    <span t-field="o.company_id.partner_id.fiscalcode"/>
                                </t>

                                <t t-if="o.company_id.partner_id.pec_mail">
                                    <br/><strong>PEC:</strong>
                                    <span t-field="o.company_id.partner_id.pec_mail"/>
                                </t>

                                <t t-if="o.company_id.partner_id.email">
                                    <br/><strong>Email:</strong>
                                    <span t-field="o.company_id.partner_id.email"/>
                                </t>

                                <t t-if="o.company_id.partner_id.phone">
                                    <br/><strong>Tel.:</strong>
                                    <span t-field="o.company_id.partner_id.phone"/>
                                </t>

                                <t t-if="o.company_id.partner_id.mobile">
                                    <br/><strong>Cell.:</strong>
                                    <span t-field="o.company_id.partner_id.mobile"/>
                                </t>

                                <t t-if="o.company_id.partner_id.website">
                                    <br/><strong>Web:</strong>
                                    <span t-field="o.company_id.partner_id.website"/>
                                </t>
                            </p>
                        </td>
                        <td style="width: 50%;">
                            <p>
                                <t t-if="o.partner_id.name">
                                    <strong>CESSIONARIO/COMMITTENTE:</strong>
                                    <br/><span t-field="o.partner_id.name"/>
                                </t>

                                <t t-if="o.partner_id.street">
                                    <br/><span t-field="o.partner_id.street"/>
                                </t>

                                <t t-if="o.partner_id.street2">
                                    <br/><span t-field="o.partner_id.street2"/>
                                </t>

                                <t t-if="o.partner_id.zip">
                                    <br/><span t-field="o.partner_id.zip"/> -
                                </t>

                                <t t-if="o.partner_id.city">
                                    <span t-field="o.partner_id.city"/>
                                </t>

                                <t t-if="o.partner_id.state_id">
                                    (<span t-field="o.partner_id.state_id.code"/>)
                                </t>

                                <t t-if="o.partner_id.country_id">
                                    - <span t-field="o.partner_id.country_id"/>
                                </t>

                                <t t-if="o.partner_id.vat">
                                    <br/><strong>P. IVA:</strong>
                                    <span t-field="o.partner_id.vat"/>
                                </t>

                                <t t-if="o.partner_id.fiscalcode">
                                    <br/><strong>C. F.:</strong>
                                    <span t-field="o.partner_id.fiscalcode"/>
                                </t>

                                <t t-if="o.partner_id.pec_mail">
                                    <br/><strong>PEC:</strong>
                                    <span t-field="o.partner_id.pec_mail"/>
                                </t>

                                <t t-if="o.partner_id.email">
                                    <br/><strong>Email:</strong>
                                    <span t-field="o.partner_id.email"/>
                                </t>

                                <t t-if="o.partner_id.phone">
                                    <br/><strong>Tel.:</strong>
                                    <span t-field="o.partner_id.phone"/>
                                </t>

                                <t t-if="o.partner_id.mobile">
                                    <br/><strong>Cell.:</strong>
                                    <span t-field="o.partner_id.mobile"/>
                                </t>

                                <t t-if="o.partner_id.website">
                                    <br/><strong>Web:</strong>
                                    <span t-field="o.partner_id.website"/>
                                </t>
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <strong t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                FATTURA N.
                            </strong>

                            <strong t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                                FATTURA PRO-FORMA
                            </strong>

                            <strong t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                FATTURA CANCELLATA N.
                            </strong>

                            <strong t-if="o.move_type == 'out_refund'">
                                NOTA DI CREDITO N.
                            </strong>

                            <span t-if="o.name != '/'" t-field="o.name"/>
                            DEL <span t-field="o.invoice_date"/>

                            <br/>

                            <t t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                                <i style="font-size: 10.5pt;">
                                    Documento privo di valenza fiscale ai sensi dell’art. 21 Dpr 633/72.
                                </i>
                            </t>

                            <t t-else="">
                                <i style="font-size: 10.5pt;">
                                    Documento privo di valenza fiscale ai sensi dell’art. 21 Dpr 633/72.
                                    L’originale è disponibile all’indirizzo telematico da
                                    Lei fornito oppure nella Sua area riservata dell’Agenzia delle Entrate.
                                </i>
                            </t>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <strong>CAUSALE:</strong>
                            <br/><span t-field="o.narration"/>
                        </td>
                    </tr>
                </table>
            </div>
        </xpath>

        <xpath expr="//t[@t-set='address']" position="replace">
            <t t-set="address">
                <t t-if="false">
                    <address t-field="o.partner_id"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;,
                                         &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;],
                                         &quot;no_marker&quot;: True}"/>
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-if="o.company_id.country_id.vat_label"
                           t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                        <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/>
                    </div>
                </t>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('page')]" position="replace">
            <div style="height: 315px;"/>

            <div class="page" style="font-family: 'Courier Prime', serif;">
                <table class="table table-bordered" name="invoice_line_table">
                    <thead>
                        <tr>
                            <th name="th_description" class="text-left">
                                <span>DESCRIZIONE</span>
                            </th>

                            <th name="th_quantity" class="text-left">
                                <span>QUANTITA'</span>
                            </th>

                            <th name="th_priceunit"
                                t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>PREZZO UNITARIO</span>
                            </th>

                            <th name="th_price_unit" t-if="display_discount"
                                t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>SCONTO [%]</span>
                            </th>

                            <th name="th_taxes"
                                t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>IVA</span>
                            </th>

                            <th name="th_subtotal" class="text-left">
                                <span>TOTALE</span>
                            </th>
                        </tr>
                    </thead>

                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                        <t t-foreach="lines" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td name="account_invoice_line_name">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>

                                    <td class="text-left">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                    </td>

                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap" t-field="line.price_unit"/>
                                    </td>

                                    <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap" t-field="line.discount"/>
                                    </td>

                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                    </td>

                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="line.price_total"/>
                                    </td>
                                </t>

                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>

                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16">SUBTOTALE</strong>
                                        <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <i t-if="o.amount_untaxed &gt; 79.47 or o.amount_untaxed == 79.47">
                    Imposta di bollo pagata in modo virtuale
                    ai sensi del decreto ministeriale 17.06.2014
                </i>

                <table class="table table-bordered">
                    <tr class="o_subtotal" style="">
                        <td><strong>IMPONIBILE</strong></td>
                        <td class="text-right">
                            <span t-field="o.amount_untaxed"/>
                        </td>
                    </tr>
                    <tr style="">
                        <td><strong>IVA</strong></td>
                        <td class="text-right">
                            <span class="text-nowrap" t-field="o.amount_tax"/>
                        </td>
                    </tr>
                    <tr class="o_total">
                        <td><strong>TOTALE</strong></td>
                        <td class="text-right">
                            <span class="text-nowrap" t-field="o.amount_total"/>
                        </td>
                    </tr>
                    <t t-if="print_with_payments">
                        <t t-if="o.payment_state != 'invoicing_legacy'">
                            <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                            <t t-foreach="payments_vals" t-as="payment_vals">
                                <tr>
                                    <td>
                                        <strong>
                                            PAGATO IL <t t-esc="payment_vals['date']"
                                                       t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                                        </strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="payment_vals['amount']"
                                              t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="len(payments_vals) &gt; 0">
                                <tr>
                                    <td><strong>IMPORTO DOVUTO</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_residual"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </t>
                    <t t-if="o.payment_state != 'paid'">
                        <tr>
                            <td colspan="2">
                                <table class="table table-borderless">
                                    <tr>
                                        <td>
                                            <strong>PAGAMENTO</strong>
                                            <br/>MP05 - Bonifico
                                        </td>
                                        <td>
                                            <strong>DETTAGLI</strong>
                                            <br/>IBAN: <span t-field="o.partner_bank_id.acc_number"/>
                                            <br/>BIC-SWIFT: <span t-field="o.partner_bank_id.bank_id.bic"/>
                                        </td>
                                        <td>
                                            <strong>SCADENZA</strong>
                                            <br/><span t-field="o.invoice_date_due"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </t>
                </table>
            </div>

            <t t-set="div_footer"> </t>
        </xpath>
    </template>
</odoo>
