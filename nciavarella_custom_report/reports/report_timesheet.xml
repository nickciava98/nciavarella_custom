<odoo>
    <template id="report_timesheet_inherit" inherit_id="hr_timesheet.report_timesheet">
        <xpath expr="//div[hasclass('page')]" position="before">
            <t t-set="div_header">
                <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                    <div t-if="company.logo or company.report_header" class="row zero_min_height">
                        <div class="col-12">
                            <div style="border-bottom: 1px solid black;"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6" name="company_address">
                            <div t-field="company.partner_id"
                                 t-options="{&quot;widget&quot;: &quot;contact&quot;,
                                             &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;],
                                             &quot;no_marker&quot;: true}"/>
                        </div>
                    </div>
                </div>
            </t>

            <t t-set="div_footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    <div class="text-muted">
                        <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </t>
        </xpath>

        <xpath expr="//table[hasclass('table-sm')]/thead/tr/th[2]" position="replace"/>
        <xpath expr="//table[hasclass('table-sm')]/tbody/tr/td[2]" position="replace"/>
    </template>
</odoo>