<odoo>
    <record id="account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>

        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_invoice_sent'][1]" position="attributes">
                <attribute name="attrs"/>
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//button[@name='action_invoice_sent'][2]" position="attributes">
                <attribute name="attrs"/>
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//button[@name='action_post'][1]" position="attributes">
                <attribute name="confirm">
                    Verrà generato il file XML della fattura elettronica. Il progressivo invio è corretto?
                </attribute>
            </xpath>

            <xpath expr="//button[@name='action_post'][2]" position="attributes">
                <attribute name="confirm">
                    Verrà generato il file XML della fattura elettronica. Il progressivo invio è corretto?
                </attribute>
            </xpath>

            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="payment_ids" invisible="True"/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']"
                   position="attributes">
                <attribute name="widget">monetary</attribute>
                <attribute name="options">
                    {'currency_field': 'currency_id', 'field_digits': True}
                </attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']"
                   position="attributes">
                <attribute name="string">Subtotal</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_total']"
                   position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_uom_id']"
                   position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']"
                   position="attributes">
                <attribute name="string">IVA</attribute>
            </xpath>

            <xpath expr="//field[@name='payment_reference']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//field[@name='amount_residual']" position="after">
                <field name="invoice_down_payment" groups="nciavarella_custom.group_admin"
                       readonly="False"/>
                <field name="cash_flow" groups="nciavarella_custom.group_admin"/>
                <field name="tax_ids" invisible="True"/>
            </xpath>
        </field>
    </record>

    <record id="account_move_form_l10n_it_inherit" model="ir.ui.view">
        <field name="name">account.move.form.l10n.it.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_it_edi.account_invoice_form_l10n_it"/>

        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_it_stamp_duty']" position="before">
                <field name="send_sequence" required="1" force_save="1"
                       attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
            </xpath>

            <xpath expr="//field[@name='l10n_it_ddt_id']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
        </field>
    </record>

    <record id="account_move_form_edi_inherit" model="ir.ui.view">
        <field name="name">account.move.form.edi.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_edi.view_move_form_inherit"/>

        <field name="arch" type="xml">
            <xpath expr="//field[@name='edi_document_ids']/tree/field[@name='state']" position="attributes">
                <attribute name="string">FE State</attribute>
            </xpath>
        </field>
    </record>
</odoo>